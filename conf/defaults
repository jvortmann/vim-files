" vim: filetype=vim
filetype indent plugin on
set ignorecase smartcase gdefault showmatch hlsearch incsearch
"enable auto write
set autowriteall
"set the buffer to become hidden instead of preventing the user from changing to another buffer
set hidden
"set proper encoding for files
set encoding=utf-8
set fileencoding=utf-8
" consistent indenting options
set tabstop=2 softtabstop=2 shiftwidth=2 expandtab smarttab
"set auto indent and smart indent
set autoindent smartindent
"enable syntax highligh
syntax on
"allow backspacing over everything in insert mode
set backspace=indent,eol,start
"set the history to display more itens
set history=100
"set the undo to have a thousand entries
set undolevels=1000
"folding settings
set foldmethod=indent   "fold based on indent
set foldnestmax=10      "deepest fold level
set nofoldenable        "dont fold by default
"improve the autocomplete menu
set completeopt=longest,menuone,preview
"disable going to the menu when pressing alt
set wak=no
"disable swap files
set noswf
" saving when losing focus
au FocusLost * :wa
" change the invisible chars
set listchars=tab:▸\ ,eol:¬,extends:❯,precedes:❮,trail:⌴
set showbreak=↪
set fillchars=diff:⣿,vert:│
"set clipboard without the new for "+
set clipboard=unnamed
"disables the showing of current mode on the command line
set noshowmode
"set split to open in a more natural setup
set splitbelow
set splitright
" add gem.tags to the list of tag files to look for
set tags+=gem.tags
" enable custom color for cursors besides coloscheme
let g:use_custom_cursors = 1
"set lazyredraw so macros run faster
set lazyredraw
" set airline to use powerline symbols from different font
let g:airline_powerline_fonts=1
