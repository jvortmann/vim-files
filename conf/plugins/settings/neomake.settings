" vim: ft=vim
let g:neomake_error_sign = {'text': 'x', 'texthl': 'DiffDelete'}
let g:neomake_warning_sign = {'text': '!', 'texthl': 'DiffChange'}
let g:neomake_message_sign = {'text': '>', 'texthl': 'DiffAdd'}
let g:neomake_info_sign = {'text': 'i', 'texthl': 'DiffText'}

let g:neomake_javascript_enabled_makers = ['eslint']

" configure neomake to run on write
call neomake#configure#automake('w')
